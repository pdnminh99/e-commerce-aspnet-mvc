@using Microsoft.AspNetCore.Identity;
@model LoginViewModel
@inject SignInManager<User> SignInManager

<form style="display: table-cell; text-align: left; padding-left: 20px;" method="post" asp-controller="Customer" asp-action="SignIn">
    <h2>Sign In</h2>
            
    <div class="form-part">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email"></span>
    </div>

    <br />

    <div class="form-part">
        <label for="password-signin" asp-for="Password"></label>
        <input asp-for="Password" id="password-signin" style="margin: 0;" type="password" />
        <button class="show-hide-passw" type="button" onclick="toggleShowHidePassword('password-signin', this)">
            <i class="fa fa-eye"></i>
        </button>
        <span asp-validation-for="Password"></span>
    </div>

    <br />

    <button type="submit" alt="search">
        Sign in
    </button>
</form>