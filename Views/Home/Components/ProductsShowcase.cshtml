@model List<EcommerceApp2259.Models.Product>;

@{
    var headline = ViewData["HeadLine"];
    var recommendedProducts = ViewData["RecommendedProducts"] as List<EcommerceApp2259.Models.Product>;
}

<div class="center_title_bar">@(headline ?? "Latest products.")</div>
@if (Model != null && Model.Count > 0)
{
    foreach (var product in Model)
    {
        @await Html.PartialAsync("Components/ProductBox", product)
    }
}
else
{
    <h1 style="text-align: center; margin-top: 50px;">This page is empty!</h1>
}

@if (recommendedProducts != null && recommendedProducts.Count > 0)
{
    <div class="center_title_bar">Recommended Products</div>
    foreach (var product in recommendedProducts)
    {
        @await Html.PartialAsync("ProductBox", product)
    }
}